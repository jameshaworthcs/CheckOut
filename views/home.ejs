    <body>
        <%- include('../views/navbar'); %>
        
    <div class="homecontent">
        <form action="https://submission-point-secure-ssl-5x23gp3.<%= rootDomain %>/submitcode">
          <br>
            <h3>Submit check-out code <svg style="display:inline-block;padding-left:10px;font-size:20px;vertical-align:middle;padding-bottom: 7px;" xmlns="http://www.w3.org/2000/svg" width="35" height="35" viewBox="0 0 1664 1408"><path fill="green" d="M1408 802v318q0 119-84.5 203.5T1120 1408H288q-119 0-203.5-84.5T0 1120V288Q0 169 84.5 84.5T288 0h832q63 0 117 25q15 7 18 23q3 17-9 29l-49 49q-10 10-23 10q-3 0-9-2q-23-6-45-6H288q-66 0-113 47t-47 113v832q0 66 47 113t113 47h832q66 0 113-47t47-113V866q0-13 9-22l64-64q10-10 23-10q6 0 12 3q20 8 20 29m231-489l-814 814q-24 24-57 24t-57-24L281 697q-24-24-24-57t24-57l110-110q24-24 57-24t57 24l263 263l647-647q24-24 57-24t57 24l110 110q24 24 24 57t-24 57"/></svg>
            </h3>
            <input type="hidden" name="authwall" value="<%= authwall %>">
            <label for="md">Module:</label>
            <select name="md" id="md" required>
            <option value="y1-soft-2">Software</option>
            <option value="y1-theory-2">Theory</option>
            <option value="y1-sd">Systems and Devices</option>
            </select>
            <input type="hidden" name="tk" value="<%= randomString %>">
            <!-- <label for="grp">Group Number: <small>(if applicable)</small></label> -->
            <input type="hidden" type="text" name="grp" id="grp" maxlength="20" value="na">
            <br><br>
            <label for="chc">Check-out Code:</label>
            <input type="tel" style="letter-spacing: 5px;" name="chc" id="chc" pattern="\d{6}" maxlength="6" oninput="validateInput(this)" required>
            <input type="hidden" name="hash2" value="<%= hash2 %>">
            <br><br>
            <input style="font-weight: bold;" type="submit" value="SUBMIT [ENTER]">
            <br><br>
            <label style="font-size: 15px;" for="submissionANON">Submissions are anonymous</label>
          </form>
          <script>document.getElementById("chc").focus()</script>
          <script>
            function validateInput(input) {
              // Allow only numbers
              input.value = input.value.replace(/\D/g, '');
        
              // Limit to 6 digits
              if (input.value.length > 6) {
                input.value = input.value.slice(0, 6);
              }
            }
          </script>
        </div>
</body>
</html>