    width: fit-content;
    font-weight: 550;
}

.verification-explanation {
    grid-column: 2; /* Align explanation text under the status */
    font-size: 0.9em;
    margin-top: 4px;
}

.activityAPI-ref {
    opacity: .7;
    font-size: smaller;
}

.activity-button-container {
    display: flex;
    justify-content: flex-end;
    margin-right: 17px;
}

.activity-button {
    display: flex;
    align-items: center;
    background-color: transparent;
    /* border: 1px solid #b3b3b3; */
    border: none;
    color: #b3b3b3;
    border-radius: 8px;
    padding: 5px 10px;
    font-size: 13px;
    cursor: pointer;
    transition: background-color 0.3s, color 0.3s;
}

.activity-button svg {
    width: 16px;
    height: 16px;
}

.activity-button:hover {
    background-color: #1a1a2e;
    color: white;
}

/* Spinner CSS */
.spinner {
    border: 4px solid #ffffff00;
    border-top: 4px solid #003cff;
    border-radius: 50%;
    width: 14px;
    height: 14px;
    animation: spin 1s linear infinite;
    display: inline-block;
    vertical-align: middle;
}

/* Spin Animation */
@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Maintain button size */
.spinner-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    width: 100%;
}

@keyframes fadeInActivityModel {
    from { opacity: 0; }
    to { opacity: 1; }
}

@media (max-width: 600px) {
    .activityModal {
        width: 90%;
        height: auto;
    }
    .activityModel-esc {
        display: none;
    }
}

.code-box-header {
    display: flex;
    justify-content: space-between;
}

.code-refresh-container {
    transform: translate(11px, -11px);
    opacity: 0.7;
    margin-block-end: -100px;
}

.code-refresh-loader {
    width: 48px;
    height: 48px;
    scale: 0.5;
    display: none;
    position: relative;
    border: 6px solid;
    border-color:var(--refresh-background1) #0000 var(--refresh-background2) #0000;
    border-radius: 50%;
    box-sizing: border-box;
    animation: 1s code-refresh-rotate linear infinite;
 }
 .code-refresh-loader:before , .code-refresh-loader:after{
    content: '';
    top: 0;
    left: 0;
    position: absolute;
    border: 10px solid transparent;
    border-bottom-color:var(--refresh-background2);
    transform: translate(-13px, 17px) rotate(-45deg);
  }
 .code-refresh-loader:after {
    border-color: var(--refresh-background1) #0000 #0000 #0000 ;
    transform: translate(29px, 0px) rotate(-42deg);
  }
   @keyframes code-refresh-rotate {
    100%{    transform: rotate(360deg)}
  }

