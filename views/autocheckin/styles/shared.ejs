<style>
/* Common styles for AutoCheckin pages */
body {
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    width: 100%;
}

.header {
    padding: 20px;
    text-align: center;
    font-size: 21px;
    border-bottom: 0;
}

.header-content {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 10px;
}

.header-content svg {
    margin-left: -1px;
    height: 25px;
    transform: translate(0, -7px);
    fill: var(--text-colour);
}

.content {
    padding: 20px;
    overflow-y: auto;
    box-sizing: border-box;
    max-width: 800px;
    width: 90%;
    margin: 0 auto;
}

.sub-text {
    text-align: center;
    line-height: 1.6;
    margin-bottom: 2rem;
}

.info-section {
    background: var(--content-background);
    padding: 1.5rem;
    border-radius: 6px;
    margin-bottom: 1.5rem;
}

.info-section h3 {
    margin-top: 0;
    margin-bottom: 1rem;
}

.styled-list {
    list-style-type: none;
    padding-left: 0;
    counter-reset: list-counter;
    margin: 0;
}

.styled-list li {
    counter-increment: list-counter;
    position: relative;
    margin-bottom: 1.5rem;
    padding-left: 2.5rem;
}

.styled-list li::before {
    content: counter(list-counter);
    width: 1.8rem;
    height: 1.8rem;
    line-height: 1.8rem;
    border-radius: 50%;
    border: 1.7px solid var(--secondary-accent-colour);
    color: var(--text-colour);
    text-align: center;
    font-weight: bold;
    position: absolute;
    left: 0;
    top: 0;
    background-color: var(--secondary-background);
}

.styled-list li small {
    display: block;
    margin-top: 0.5rem;
    color: var(--secondary-text-colour);
}

.footer {
    background-color: var(--page-background);
    padding: 10px 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
    margin-top: auto;
}

#errorText {
    color: rgb(255, 80, 80);
    margin-block-start: 0;
    margin-block-end: 0;
}

.termsText {
    text-align: center;
    margin-bottom: 10px;
    font-size: 14px;
    color: var(--secondary-text-colour);
}

.tosLink,
.tosLink:active,
.tosLink:visited {
    text-decoration: none;
    color: var(--link-colour);
}

#continue-btn {
    background-color: var(--action-colour);
    color: var(--cta-button-colour);
    border: none;
    padding: 15px;
    font-size: .87rem;
    font-weight: 550;
    cursor: pointer;
    width: 100%;
    max-width: 300px;
    box-sizing: border-box;
    border-radius: 5px;
    margin: 1rem 0;
}

#continue-btn:hover {
    background-color: var(--action-highlight-colour);
}

#continue-btn.grey,
#continue-btn.grey:hover {
    background-color: lightgrey;
    cursor: not-allowed;
}

#loading-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.95);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    visibility: hidden;
    opacity: 0;
    transition: opacity 0.2s ease;
}

#loading-content {
    text-align: center;
    position: relative;
}

#loading-svg {
    opacity: 1;
}

.loader {
    border: 3px solid #f3f3f3;
    border-top: 3px solid #3498db;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    animation: spin 2s linear infinite;
    position: absolute;
    top: calc(100% + 20px);
    left: 50%;
    margin: 5px 0 0 -20px;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Feature bubbles */
.feature-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.feature-item {
    background: var(--secondary-background);
    padding: 1rem 1.5rem;
    border-radius: 6px;
    color: var(--text-colour);
}

.feature-item.left {
    align-self: flex-start;
}

.feature-item.right {
    align-self: flex-end;
}

/* Media queries */
@media (min-width: 601px) {
    #continue-btn:not(.grey)::after {
        content: " [ENTER]";
        font-size: 0.87rem;
        font-weight: 550;
    }

    .footer {
        background-color: var(--page-background);
    }
}

@media (max-width: 600px) {
    .content {
        margin: 1rem auto;
        padding: 10px;
    }

    .info-section {
        padding: 1rem;
    }

    #continue-btn {
        max-width: 100%;
    }
}
</style>