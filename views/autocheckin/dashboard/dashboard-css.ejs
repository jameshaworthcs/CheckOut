<style>
    /* dashboard css */
    .admin-message-box {
        background-color: var(--warning-background);
        color: var(--warning-text);
        padding: 0.75rem 1rem;
        margin-bottom: 1.5rem;
        border-radius: 6px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border: 1px solid var(--warning-border);
    }

    .admin-message-box a {
        color: var(--submit-fail-colour);
        text-decoration: underline;
        cursor: pointer;
    }

    .autocheckin-dashboard {
        padding: 2rem;
        max-width: 100%;
        min-height: calc(100vh - 88px); /* Adjust based on navbar height */
        box-sizing: border-box;
        width: 100%;
        display: flex;
        flex-direction: column;
    }

    h2 {
        margin-block-start: 5px;
    }

    .dashboard-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 2rem;
    }

    .header-left h1 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
        margin-block-start: 0;
    }

    .header-left p {
        margin: 0.25rem 0;
        color: var(--subtext-color);
    }

    .status-active {
        color: var(--submit-success-colour);
    }

    .header-right {
        display: flex;
        align-items: center;
        flex-direction: row-reverse;
        gap: 0.75rem;
    }

    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 4px;
        font-weight: 500;
    }

    .status-badge.active {
        background: var(--submit-success-background);
        color: var(--submit-success-colour);
    }

    .status-badge.pending {
        background: var(--cta-background);
        color: var(--cta-button-colour);
    }

    .status-badge.error, .status-badge.disabled {
        background: var(--submit-fail-background);
        color: var(--submit-fail-colour);
    }

    .last-active {
        color: var(--subtext-color);
        font-size: 0.9rem;
    }

    .dashboard-grid {
        display: grid;
        gap: 1.5rem;
        grid-template-columns: minmax(0, 30%) minmax(0, 45%) minmax(0, 25%);
        grid-template-rows: auto 1fr;
        grid-template-areas: 
            "status stats activity"
            "timetable stats activity"
            "timetable manage activity";
        width: 100%;
        box-sizing: border-box;
        align-items: start;
        height: 100%;
    }

    .grid-item {
        background: var(--content-background);
        border-radius: 8px;
        box-shadow: var(--shadow);
        border: var(--box-accent-width) solid var(--accent-colour);
        padding: 15px;
        box-sizing: border-box;
        width: 100%;
    }

    /* .box-header {
        margin-bottom: 1rem;
    } */

    .box-content {
        flex: 1;
        overflow-y: auto;
        min-height: 0;
    }

    .top-left-box {
        grid-area: status;
        height: fit-content;
    }

    .bottom-left-box {
        grid-area: timetable;
        display: flex;
        flex-direction: column;
        max-height: calc(100vh - 410px); /* Account for header and status box */
        min-height: 200px;
    }

    .bottom-left-box .box-content {
        overflow-y: auto;
        flex: 1;
        padding-right: 0.5rem;
    }

    /* Custom scrollbar for timetable */
    .bottom-left-box .box-content::-webkit-scrollbar {
        width: 8px;
    }

    .bottom-left-box .box-content::-webkit-scrollbar-track {
        background: var(--code-background);
        border-radius: 4px;
    }

    .bottom-left-box .box-content::-webkit-scrollbar-thumb {
        background: var(--secondary-accent-colour);
        border-radius: 4px;
    }

    .bottom-left-box .box-content::-webkit-scrollbar-thumb:hover {
        background: var(--accent-colour);
    }

    .middle-box {
        grid-area: stats;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    @media (min-width: 769px) {
        .middle-box {
            grid-row: 1 / span 2;
        }
    }

    .middle-box .box-content {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .manage-box {
        grid-area: manage;
        height: fit-content;
        margin-top: auto;
    }

    .right-box {
        grid-area: activity;
        display: flex;
        flex-direction: column;
        height: 100%;
        max-height: 100%;
    }

    .right-box .box-header {
        flex-shrink: 0;
    }

    .right-box .box-content {
        flex: 1;
        overflow: hidden;
        position: relative;
        min-height: 0;
    }

    .box-content-item {
        padding: 12px 15px;
        border: var(--secondary-box-accent-width) solid var(--secondary-accent-colour);
        box-shadow: var(--shadow2);
        background: var(--code-background);
        border-radius: 5px;
        transition: background-color 0.3s, color 0.3s;
        margin-bottom: 10px;
        color: var(--code-colour);
    }

    .coming-soon-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        flex: 1;
        gap: 1rem;
        color: var(--subtext-color);
        font-size: 1.1rem;
    }

    .coming-soon-icon {
        font-size: 2.5rem;
        opacity: 0.7;
    }

    .timetable-day-divider {
        margin: 20px 0 10px 0;
        padding-bottom: 5px;
        border-bottom: 1px solid var(--secondary-accent-colour);
    }

    .timetable-day-name {
        font-weight: 500;
        color: var(--subtext-color);
    }

    .timetable-item {
        display: grid;
        grid-template-areas:
            "reference time dropdown"
            "details details details"
            "status status status";
        grid-template-columns: 1fr auto auto;
        gap: 2px;
    }

    .timetable-item-activity-reference {
        grid-area: reference;
        font-weight: bold;
    }

    .timetable-item-time {
        grid-area: time;
        text-align: right;
        color: var(--subtext-color);
    }

    .timetable-item-dropdown {
        grid-area: dropdown;
        cursor: pointer;
        padding: 0 4px;
        display: flex;
        align-items: center;
        color: var(--subtext-color);
        transition: transform 0.3s ease;
    }

    .timetable-item-dropdown.expanded {
        transform: rotate(180deg);
    }

    .timetable-item-details {
        grid-area: details;
        display: grid;
        grid-template-columns: 1fr auto;
        gap: 8px;
        overflow: hidden;
        max-height: 0;
        opacity: 0;
        transition: max-height 0.3s ease, opacity 0.3s ease, margin 0.3s ease;
        margin: 0;
    }

    .timetable-item-details.expanded {
        max-height: 50px;
        opacity: 1;
        margin: 4px 0;
    }

    .timetable-item-lecturer {
        color: var(--subtext-color);
    }

    .timetable-item-location {
        text-align: right;
        color: var(--subtext-color);
    }

    .timetable-item-status {
        grid-area: status;
        margin-top: 4px;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        gap: 4px;
    }

    .status-present {
        background: var(--submit-success-background);
        color: var(--submit-success-colour);
    }

    .status-absent {
        background: var(--submit-fail-background);
        color: var(--submit-fail-colour);
    }

    .status-unknown {
        background: var(--cta-background);
        color: var(--cta-button-colour);
        opacity: 0.7;
    }

    .skeleton {
        background: linear-gradient(90deg, 
            var(--skeleton-gradient-start) 25%, 
            var(--skeleton-gradient-middle) 50%, 
            var(--skeleton-gradient-end) 75%
        );
        background-size: 200% 100%;
        animation: loading 1.5s infinite;
        border-radius: 4px;
        margin-bottom: 10px;
    }

    .activity-skeleton-container {
        display: flex;
        flex-direction: column;
        gap: 12px;
        padding: 4px;
    }

    .activity-skeleton-item {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .activity-skeleton-title {
        height: 20px;
        width: 70%;
    }

    .activity-skeleton-details {
        height: 16px;
        width: 40%;
    }

    @keyframes loading {
        0% { background-position: 200% 0; }
        100% { background-position: -200% 0; }
    }

    @media (max-width: 768px) {
        .dashboard-header {
            flex-direction: column;
        }

        .header-right {
            margin-top: 1rem;
            flex-direction: row;
        }

        .dashboard-grid {
            grid-template-columns: 1fr;
            grid-template-rows: auto;
            grid-template-areas: 
                "status"
                "timetable"
                "stats"
                "manage"
                "activity";
            gap: 1rem;
        }

        .grid-item {
            min-height: min-content;
        }

        .bottom-left-box {
            max-height: 500px; /* Cap height on mobile */
            min-height: 200px;
        }

        .middle-box {
            height: 300px;
            min-height: 300px;
        }

        .right-box {
            height: 400px;
        }

        .manage-box {
            margin-top: 0;
        }
    }

    .active-text {
        color: var(--submit-success-colour);
    }

    .pending-text {
        color: var(--cta-button-colour);
    }

    .error-text, .disabled-text {
        color: var(--submit-fail-colour);
    }

    #manage-button-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 1rem 0;
    }

    #checkin-toggle-button {
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        font-weight: 500;
        cursor: pointer;
        border: none;
        transition: background-color 0.3s, opacity 0.3s;
    }

    #checkin-toggle-button.loading {
        background-color: var(--secondary-accent-colour);
        color: var(--subtext-color);
        cursor: default;
        opacity: 0.7;
    }

    #checkin-toggle-button.enable {
        background-color: var(--submit-success-background);
        color: var(--submit-success-colour);
    }

    #checkin-toggle-button.disable {
        background-color: var(--submit-fail-background);
        color: var(--submit-fail-colour);
    }

    #checkin-toggle-button.disabled {
        background-color: var(--secondary-accent-colour);
        color: var(--subtext-color);
        cursor: not-allowed;
        opacity: 0.7;
    }

    #help-button {
        background-color: var(--cta-background);
        color: var(--cta-button-colour);
        padding: 0.75rem 1.5rem;
        margin-left: 1rem;
        border-radius: 6px;
        font-weight: 500;
        cursor: pointer;
        border: none;
        transition: background-color 0.3s, opacity 0.3s;
    }
    

    /* Modal styles */
    .disable-confirm-modal {
        max-width: 450px;
        text-align: center;
    }

    .disable-confirm-modal .modal-content {
        padding: 2rem;
    }

    .disable-confirm-modal h2 {
        color: var(--submit-fail-colour);
        margin-bottom: 1rem;
    }

    .disable-confirm-modal p {
        margin-bottom: 2rem;
        color: var(--text-color);
        line-height: 1.5;
    }

    .disable-confirm-buttons {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
    }

    .disable-confirm-buttons .button-row {
        display: flex;
        justify-content: center;
        gap: 1rem;
        width: 100%;
    }

    .disable-confirm-buttons button, 
    .disable-confirm-buttons .contact-support {
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        font-weight: 500;
        cursor: pointer;
        border: none;
        transition: background-color 0.3s, opacity 0.3s;
        flex: 1;
        max-width: 180px;
    }

    .disable-confirm-buttons .contact-support {
        background-color: var(--submit-success-background);
        color: var(--submit-success-colour);
        font-weight: 600;
        text-decoration: none;
        text-align: center;
        display: inline-block;
    }

    .disable-confirm-buttons .contact-support:hover {
        opacity: 0.9;
    }

    .disable-confirm-buttons .cancel-button {
        background: var(--cta-background);
        color: var(--cta-button-colour);
    }

    .disable-confirm-buttons .cancel-button:hover {
        opacity: 0.9;
    }

    .disable-confirm-buttons .confirm-disable-text {
        color: var(--submit-fail-colour);
        cursor: pointer;
        font-size: 0.9rem;
        transition: opacity 0.3s;
    }

    .disable-confirm-buttons .confirm-disable-text:hover {
        opacity: 0.8;
    }

    .disable-confirm-buttons .confirm-disable-text.loading {
        color: var(--subtext-color);
        cursor: default;
        opacity: 0.7;
    }

    .activity-log-container {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        overflow-y: auto;
        padding-right: 0.5rem;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .activity-log-item {
        flex-shrink: 0;
        padding: 0.75rem;
        border-radius: 6px;
        background: var(--code-background);
        border: var(--secondary-box-accent-width) solid var(--secondary-accent-colour);
        transition: background-color 0.3s;
    }

    .activity-log-item.state-checkin {
        background: var(--submit-success-background);
    }

    .activity-log-item.state-fail,
    .activity-log-item.state-other {
        background: var(--submit-fail-background);
    }

    .activity-log-message {
        color: var(--text-color);
        margin-bottom: 0.5rem;
        line-height: 1.4;
    }

    .activity-log-time {
        color: var(--subtext-color);
        font-size: 0.9rem;
    }

    /* Custom scrollbar for activity log */
    .activity-log-container::-webkit-scrollbar {
        width: 8px;
    }

    .activity-log-container::-webkit-scrollbar-track {
        background: var(--code-background);
        border-radius: 4px;
    }

    .activity-log-container::-webkit-scrollbar-thumb {
        background: var(--secondary-accent-colour);
        border-radius: 4px;
    }

    .activity-log-container::-webkit-scrollbar-thumb:hover {
        background: var(--accent-colour);
    }

    /* Timetable Pagination Styles */
    .timetable-pagination {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
        padding: 0;
        position: relative;
        flex-wrap: wrap;
    }

    .pagination-nav {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        flex-wrap: nowrap;
        min-width: 0;
    }

    .pagination-button {
        background: none;
        border: 1px solid var(--secondary-accent-colour);
        cursor: pointer;
        padding: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-color);
        border-radius: 4px;
        transition: background-color 0.2s, opacity 0.2s;
        min-width: 40px;
        min-height: 40px;
        flex-shrink: 0;
    }

    .pagination-button:hover:not(:disabled) {
        background-color: var(--secondary-accent-colour);
    }

    .pagination-button:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .week-display {
        font-size: 1.1rem;
        font-weight: 600;
        padding: 0 0.5rem;
        text-align: center;
        min-width: 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Responsive styles for pagination */
    @media (max-width: 768px) {
        .timetable-pagination {
            align-items: center;
            width: 100%;
        }
        
        .pagination-nav {
            width: 100%;
            justify-content: space-between;
        }
        
        .week-display {
            font-size: 1rem;
        }
    }

    /* Extra small screens */
    @media (max-width: 400px) {
        .week-display {
            font-size: 0.9rem;
            padding: 0 0.25rem;
        }
        
        .pagination-button {
            padding: 0.5rem;
            min-width: 36px;
            min-height: 36px;
        }
    }

    /* Remove the old dropdown styles and current week button that are no longer needed */
    .week-dropdown-menu,
    .week-selector,
    .week-option,
    .current-week-button {
        display: none;
    }
    
    /* Ensure timetable content doesn't cause horizontal scrolling */
    .timetable-box-content {
        overflow-x: hidden;
    }
    
    .timetable-day-section {
        width: 100%;
    }
    
    .timetable-item {
        word-break: break-word;
    }
    
    .timetable-item-activity-reference,
    .timetable-item-time,
    .timetable-item-lecturer,
    .timetable-item-location {
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>