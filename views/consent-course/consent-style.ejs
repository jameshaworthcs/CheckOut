        border-top: 3px solid #3498db;
        border-radius: 50%;
        width: 20px;
        height: 20px;
        animation: spin 2s linear infinite;
        position: absolute;
        top: calc(100% + 20px);
        left: 50%;
        margin: 5px 0 0 -20px;
    }

    @keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
